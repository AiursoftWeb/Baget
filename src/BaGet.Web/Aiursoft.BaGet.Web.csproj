<Project Sdk="Microsoft.NET.Sdk.Razor">
    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <AssemblyName>Aiursoft.BaGet.Web</AssemblyName>
        <RootNamespace>BaGet.Web</RootNamespace>
        <IsTestProject>false</IsTestProject>
        <IsPackable>false</IsPackable>
        <ImplicitUsings>enable</ImplicitUsings>
        <Description>BaGet's NuGet server implementation</Description>
        <PackageTags>NuGet</PackageTags>
        <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    </PropertyGroup>
    <ItemGroup>
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Humanizer" Version="2.14.1" />
        <PackageReference Include="Markdig" Version="0.32.0" />
    </ItemGroup>
    <ItemGroup>
        <ProjectReference Include="..\BaGet.Core\Aiursoft.BaGet.Core.csproj" />
    </ItemGroup>
</Project>